@model List<TaskAppMVC.ViewModels.Artical>

@{
    ViewData["Title"] = "Home Page";
}



<div class="container">
    <div class="jumbotron" style="background-color: #20315A ; color: white;">
        <h1 class="text-center"><strong><i class="fa fa-newspaper-o"></i> New York Times Search</strong></h1>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <br>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><strong><i class="fa  fa-list-alt"></i>   Search</strong></h3>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="form-group">
                            <label for="search">Search Term:</label>
                            <input type="text" class="form-control" name="searchTerm" id="searchTerm" required>
                        </div>
                        <button type="submit" class="btn btn-outline-secondary" id="runSearch"><i class="fa fa-search"></i> Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12">
            <br>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><strong><i class="fa fa-table"></i>   Articles</strong></h3>
                </div>
                <div class="card-body" id="wellSection">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <h4>@item.Headline</h4><br />
                            <p>@item.Content</p>
                            <a href="@item.Url">@item.Url</a><br />
                            <p>Publish Date: @item.PublishDate</p>
                            <hr />
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

